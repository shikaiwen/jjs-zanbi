<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jjs.zanbi.dao.WorkerMapper" >


    <resultMap id="selectByPageExample" type="com.jjs.zanbi.model.Worker" extends="com.jjs.zanbi.dao.WorkerMapper.Base_Column_List">

        <association property="org_id" columnPrefix="b_"></association>

    </resultMap>


    <select id="selectByPage">
        select a.*,

          <include refid="com.jjs.zanbi.dao.OrgMapper.base_column_with_alias">
              <property name="alias" value="b"></property>
              <property name="prefix" value="b_"></property>
          </include>

         from worker
        left join org on a.org_id = b.id
    </select>



<sql id="base_ex">

    ${alias}.id   		 ${prefix}id,
    ${alias}.worker_id   		 ${prefix}worker_id,
    ${alias}.name   		 ${prefix}name,
    ${alias}.zb_role_id   		 ${prefix}zb_role_id,
    ${alias}.org_id   		 ${prefix}org_id,
    ${alias}.status   		 ${prefix}status
</sql>
</mapper>